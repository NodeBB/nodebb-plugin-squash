{
	"id": "nodebb-plugin-trollify",
	"name": "NodeBB Trollify Plugin",
	"description": "Mark users as trolls to squash their posts",
	"url": "https://github.com/NodeBB/nodebb-plugin-trollify",
	"library": "./library.js",
	"hooks": [
		{
			"hook": "static:app.load", "method": "init"
		},
		{
			"hook": "filter:admin.header.build", "method": "addAdminNavigation"
		}
	],
	"staticDirs": {
		"static": "./static"
	},
	"less": [
		"static/style.less"
	],
	"scripts": [
		"static/lib/main.js"
	],
	"templates": "static/templates"
}